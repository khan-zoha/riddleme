<%-include("partials/header");-%>
<body >
    <span class="material-icons md-48 md-16" onclick="location.replace('home')">home</span>
    <img  class=questionmarks src="/images/finalquestionmarks.png" alt="questionmarks">
    <h1 class="smallH"> Riddle Me </h1>

    <form action="/login" method="POST">

      <div class="row">
        <div class="name col-lg-6 col-md-6 col-xs-6 col-sm-6 center-block">
          <label for="email" class="name col-lg-9 col-md-9 col-xs-9 col-sm-9 center-block">Email:</label>
        </div>

        <div class="name ccol-lg-6 col-md-6 col-xs-6 col-sm-6 center-block">
          <label for="email" class="name col-lg-9 col-md-9 col-xs-9 col-sm-9 center-block">OR</label>
        </div>
      </div>

      <div class="row">
        <div class="form-group name col-lg-6 col-md-6 col-xs-6 col-sm-6 center-block">
          <input type="email" class="box name col-lg-9 col-md-9 col-xs-9 col-sm-9 center-block" id="email" placeholder="Enter email..." name="email">
        </div>

        <div class="card-body">
          <a class="btn btn-social btn-facebook" href="/auth/facebook" role="button"> 
            <i class="fab fa-facebook"></i>
            Sign In with facebook
          </a>
        </div>
      </div>

      <div class="row">
        <div class="name col-lg-6 col-md-6 col-xs-6 col-sm-6 center-block">
          <label for="pwd" class="name col-lg-9 col-md-9 col-xs-9 col-sm-9 center-block">Password:</label>     
        </div>

        <div class="name ccol-lg-6 col-md-6 col-xs-6 col-sm-6 center-block">
          <label for="email" class="name col-lg-9 col-md-9 col-xs-9 col-sm-9 center-block">OR</label>
        </div>
      </div>

      <div class="row">
        <div class="form-group name col-lg-6 col-md-6 col-xs-6 col-sm-6 center-block">
          <input type="password" class="box name col-lg-9 col-md-9 col-xs-9 col-sm-9 center-block" id="pwd" placeholder="Enter password..." name="pwd">
        </div>

        <div class=" name col-lg-6 col-md-6 col-xs-6 col-sm-6 center-block">
          <button type="submit" class="button obj name col-lg-9 col-md-9 col-xs-9 col-sm-9 center-block" name="btn" value="guest">Login As Guest</button>
        </div>
      </div>

      <div class="row">
        <div class="name col-lg-6 col-md-6 col-xs-6 col-sm-6">
          <br>
          <button type="submit" class="button obj name col-lg-9 col-md-9 col-xs-9 col-sm-9 center-block" name="btn" value="signup">Signup</button>   
        </div>
      </div>
      <br><br><br>
    </form> 
    
    <script src="/js/index.js"></script>
</body>
</html>